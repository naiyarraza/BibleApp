<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="#fff"
    android:id="@+id/goodies_list_item"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:layout_margin="2dp"
    card_view:cardElevation="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_margin="@dimen/margin_chapter"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/chapter_title_color"
            android:textSize="@dimen/textSize"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/gdName"
            android:layout_width="match_parent"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:text="Name" />
        <LinearLayout
            android:layout_below="@+id/gdName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/chapter_color"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapters -" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/chapter_color"
                android:id="@+id/gdPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time" />
        </LinearLayout>


        <ImageView
            android:id="@+id/leftArrow"
            android:background="@drawable/indecator_background"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>